{% extends 'AdminBundle::layout.html.twig' %}
{% block title %} FTTH Orange | produits entrés {% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('') }}assets/css/jquery-ui.custom.min.css"/>
        <link rel="stylesheet" href="{{ asset('') }}assets/css/chosen.min.css"/>
        <link rel="stylesheet" href="{{ asset('') }}assets/css/bootstrap-datepicker3.min.css"/>
        <link rel="stylesheet" href="{{ asset('') }}assets/css/bootstrap-timepicker.min.css"/>
        <link rel="stylesheet" href="{{ asset('') }}assets/css/daterangepicker.min.css"/>
        <link rel="stylesheet" href="{{ asset('') }}assets/css/bootstrap-datetimepicker.min.css"/>
        <link rel="stylesheet" href="{{ asset('') }}assets/css/bootstrap-colorpicker.min.css"/>

    {% endblock %}
   {% block menu %}  <a href="{{ path('quantiteentree_index') }}">Produits_entrés</a>   {% endblock %}

   {% block menu_active %}  fiche {% endblock %}
{% block content %}
    <h1>Quantiteentree</h1>
    <div class="row">
        <div class="col-md-4 col-md-offset-1">

            <table class="table table-detail">
                <tbody>
                <tr>
                    <th>Fournisseur</th>

                    <td>
                        {% if quantiteentree.fou is not null %}
                            {{ quantiteentree.fou.nom }}
                        {% else %}
                            --
                        {% endif %}
                    </td>
                </tr>

                <tr>
                    <th>Produit</th>
                    <td>
                        {% if quantiteentree.pro is not null %}
                            {{ quantiteentree.pro.labelle }}
                        {% else %}
                            --
                        {% endif %}

                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4 col-md-offset-1">

            <table class="table table-detail">
                <tbody>
                <tr>
                    <th>Quantité entrée</th>
                    <td>{{ quantiteentree.qteentree }}</td>
                </tr>
                <tr>
                    <th>Dateentree</th>
                    <td>{% if quantiteentree.dateentree %}{{ quantiteentree.dateentree|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Id</th>
                    <td>{{ quantiteentree.id }}</td>
                </tr>
                </tbody>
            </table>
        </div>


    </div>


    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('quantiteentree_index') }}" class="btn btn-white btn-primary"><i class="fa fa-reply"></i>
                Retour</a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('quantiteentree_edit', { 'id': quantiteentree.id }) }}" class="btn btn-white btn-warning">
                <i class="fa fa-pencil-square-o"></i> Modifier</a>
        </div>
        <div class="col-md-4">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-white">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
